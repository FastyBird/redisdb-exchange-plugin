php:
	date.timezone: Europe/Prague

extensions:
	contributteConsole		: Contributte\Console\DI\ConsoleExtension(%consoleMode%)
	contributeEvents		: Contributte\EventDispatcher\DI\EventDispatcherExtension
	fbDateTimeFactory		: FastyBird\DateTimeFactory\DI\DateTimeFactoryExtension
	fbExchangePlugin		: FastyBird\ExchangePlugin\DI\ExchangePluginExtension
	fbModulesMetadata		: FastyBird\ModulesMetadata\DI\ModulesMetadataExtension

contributteConsole:
	name: FastyBird:RedisDbExchangePlugin!
	version: '1.0'
	catchExceptions: true
	autoExit: true
	url: http://example.com
	lazy: false
	helperSet: \Symfony\Component\Console\Helper\HelperSet
	helpers: []

fbRedisDbExchangePlugin:
	enableAsync: true
	connection:
		default:
			host: 127.0.0.1

services:
    - {
        type: React\EventLoop\LoopInterface
        factory: React\EventLoop\Factory::create
    }
